<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Perfil_Usuario_Activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/img_usuario"
                android:layout_width="90dp"
                android:layout_height="90dp"
                tools:srcCompat="@tools:sample/avatars"
                android:layout_gravity="center"
                android:layout_marginTop="24dp"/>

            <TextView
                android:id="@+id/txt_nombre_usuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre de usuuario"
                android:textAlignment="center"
                android:textSize="20dp"
                android:layout_marginTop="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_correo_usurio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="correo"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_registrar_mascota"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registrar Mascota" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>