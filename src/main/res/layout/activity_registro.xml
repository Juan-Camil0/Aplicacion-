<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/input_raza"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_activity"
    android:scrollbars="none"
    tools:context=".Registro_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center|center_vertical"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:divider="@drawable/logo"
        android:orientation="vertical">

        //Logo

        //Titulo

        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginBottom="34dp"
            app:srcCompat="@drawable/logo" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif-black"
            android:text="Registrar Usuario "
            android:textAlignment="center"
            android:textColor="@color/verde_tercero"
            android:textSize="34sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="24dp"
            android:text="Nombre de Usuario"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edt_usu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableStart="@drawable/usuario_icono"
            android:duplicateParentState="true"
            android:textSize="12sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:text="Email"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edt_correo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableStart="@drawable/email"
            android:textSize="12sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:text="password"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edt_pass"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableStart="@drawable/clave_icono"
            android:inputType="textPassword"
            android:textSize="12sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:text="Confirmar Password"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/edt_confimar_pass"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableStart="@drawable/confirmar"
            android:inputType="textPassword"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_registrar"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/boton"
            android:backgroundTint="@color/verde_tercero"
            android:onClick="onClick"
            android:text="Confirmar" />


    </LinearLayout>


</ScrollView>